<div>
    <h1>Listado de Productos</h1>
    <table>
        <thead>
            <th>Id</th>
            <th>Status</th>
            <th>Title</th>
            <th>Description</th>
            <th>Code</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
        </thead>
        <tbody>
            {{#each data.payload}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{status}}</td>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>{{code}}</td>
                    <td>{{price}}</td>
                    <td>{{stock}}</td>
                    <td>{{category}}</td>
                    <td><button id="agree" class="button">Agregar</button></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <ul>
        {{#if data.hasPrevPage}}
        <li><a href="{{data.prevLink}}">Anterior</a></li>
        {{/if}}
        {{#if data.hasNextPage}}
        <li><a href="{{data.nextLink}}">Siguiente</a></li>
        {{/if}}
    </ul>    
</div>